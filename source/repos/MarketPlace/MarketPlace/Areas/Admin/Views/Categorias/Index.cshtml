
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Categorias</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"><i class="bg-info bi-plus-square-fill"></i> Agregar Categoria</a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblCategorias" class="table table-responsive table-hover" style="width: 100%">
        <thead class="thead-dark">
            <tr class="table-dark">
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts{
    <script src="~/js/categoria.js"></script>
}